          "name": "Message",
          "locale_name": {
            "fr_FR": "Message"
          }
        }
      }
    },
    {
      "id": "onRegisterError",
      "name": "Register Error",
      "locale_name": {
        "fr_FR": "Erreur d'inscription"
      },
      "queryable": {
        "code": "auth/invalid-email",
        "__desc_code": {
          "name": "Code",
          "locale_name": {
            "fr_FR": "Code"
          }
        },
        "message": "Firebase: The email address is badly formatted. (auth/invalid-email).",
        "__desc_message": {
          "name": "Message",
          "locale_name": {
            "fr_FR": "Message"
          }
        }
      }
