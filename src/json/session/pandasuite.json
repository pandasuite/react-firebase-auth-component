{
  "version": "2.0.0",
  "main": "",

  "system": {
    "localization": true
  },

  "properties": [
    {
      "id": "apiKey",
      "name": "API Key",
      "locale_name": {
        "fr_FR": "Clé API"
      },
      "type": "String",
      "required": true
    },
    {
      "id": "projectId",
      "name": "Project ID",
      "locale_name": {
        "fr_FR": "ID de projet"
      },
      "type": "String",
      "required": true
    },
    {
      "id": "verifyEmail",
      "name": "Force email verification",
      "locale_name": {
        "fr_FR": "Forcer la vérification d'email"
      },
      "type": "Boolean",
      "value": false
    },
    {
      "id": "forceAuthenticationAfter",
      "name": "Force authentication after (hours)",
      "locale_name": {
        "fr_FR": "Forcer l'authentification après (heures)"
      },
      "type": "Integer",
      "value": 0
