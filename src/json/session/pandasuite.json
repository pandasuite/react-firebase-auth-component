          "id": "email",
          "name": "Email",
          "locale_name": {
            "fr_FR": "Email"
          },
          "type": "String",
          "bindable": true
        },
        {
          "id": "password",
          "name": "Password",
          "locale_name": {
            "fr_FR": "Mot de passe"
          },
          "type": "String",
          "bindable": true
